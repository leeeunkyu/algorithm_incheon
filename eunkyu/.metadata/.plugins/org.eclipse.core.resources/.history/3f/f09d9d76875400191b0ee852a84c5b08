package algorithm;

public class Combination_2 {
	
	static int[] arr;
	static int n;
	public static void main(String[] args) {
		arr = new int[30];
		for (int i = 0; i < 30; i++) {
			arr[i] = i;
		}
		
		n = arr.length;
		int r = 8;
		int[] combArr = new int[r];
		double st = System.currentTimeMillis();
		doCombination(combArr, r, 0, 0);
		double et = System.currentTimeMillis();
		System.out.println(et - st);
		
		st = System.currentTimeMillis();
		for (int i = 0; i < (1 << n); i++) {
			if(Integer.bitCount(i) == r) {
				for (int j = 0; j < n; j++) {
					if(((1 << j) & i) > 0) {
						
					}
				}
			}
		}
		et = System.currentTimeMillis();
	
	}
	private static void doCombination(int[] combArr, int r, int index, int target) {
		if(r == 0) {
			for (int i = 0; i < index; i++) {
				//System.out.print(arr[combArr[i]]+" ");
			}
			//System.out.println();
		} else if(target == n) {
			return;
		} else {
			combArr[index] = target;
			doCombination(combArr, r - 1, index + 1, target + 1);
			doCombination(combArr, r, index, target + 1);
		}
	}
}
