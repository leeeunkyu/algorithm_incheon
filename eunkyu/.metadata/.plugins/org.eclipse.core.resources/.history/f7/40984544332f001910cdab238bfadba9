package algorithm;

public class Solution_2 {
	public static void main(String[] args) {
		int A [] = {5, 4, 0, 3, 1, 6, 2};
		solution(A);
	}
	public static int solution(int[] A) {
		System.out.println("start");
		for (int i = 0; i < A.length; i++) {
			int init = A[i];
			System.out.println("init: "+init+" A[init]: "+A[init]);

			int cnt = 0;
			while (cnt < A.length) {
				init = A[init];
				System.out.println("init: "+init+" A[init]: "+A[init]);
				if(A[init] != init) {
					cnt++;
				} else {
					System.out.println(cnt);
					break;
				}
			}
		}
		
		return 0;
	}
}
