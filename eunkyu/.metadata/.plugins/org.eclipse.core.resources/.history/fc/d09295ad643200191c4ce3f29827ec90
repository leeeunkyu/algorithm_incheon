package algorithm;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.LinkedList;
import java.util.Queue;

public class Main_13460 {
	final static int MAX_COUNT = 10;
	static int n;
	static int m;
	public static void main(String[] args) throws IOException {
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		String str[] = br.readLine().split(" ");
		n = Integer.parseInt(str[0]); //세로
		m = Integer.parseInt(str[1]); //가로
		char bord[][] = new char[n][m];
		RedBall redBall = new RedBall(0, 0, 0);
		BlueBall blueBall = new BlueBall(0, 0);
		for (int i = 0; i < n; i++) {
			char[] temp = br.readLine().toCharArray();
			for (int j = 0; j < m; j++) {
				char val = temp[j];
				bord[i][j] = val;
				if (val == 'R') {
					redBall = new RedBall(j, i, 0); 
				} else if (val == 'B') {
					blueBall = new BlueBall(j, i);
				}
			}
		}

		
		new Main_13460().bordGame(bord, redBall, blueBall);

	}
	private void bordGame(char[][] bord, RedBall redBall, BlueBall blueBall) {
		int[] dx = {0, 0, 1, -1};
		int[] dy = {1, -1, 0, 0};
		int safeLineX = m - 1;
		int safeLineY = n - 1;

		Queue<RedBall> redBalls = new LinkedList<RedBall>();
		Queue<BlueBall> blueBalls = new LinkedList<BlueBall>();
		
		redBalls.add(redBall);
		blueBalls.add(blueBall);
		
		while(true) {
			if(redBalls.isEmpty() && blueBalls.isEmpty())
				break;
			if(!redBalls.isEmpty())
				redBall = redBalls.poll();
			
			int rx = redBall.getX();
			int ry = redBall.getY();
			int cnt = redBall.getCnt();

			if(!blueBalls.isEmpty())
				blueBall = blueBalls.poll();
			
			int bx = blueBall.getX();
			int by = blueBall.getY();
			
			for (int i = 0; i < 4; i++) {
				int nextRX = rx + dx[i];
				int nextRY = ry + dy[i];
				int nextBX = bx + dx[i];
				int nextBY = by + dy[i];
				boolean o = false;
				//벽 고려
				while(nextBX >= 1 && nextBX < safeLineX && nextBY >= 1 && nextBY < safeLineY
						 && bord[nextBY][nextBX] != '#') {
					if(bord[nextBY][nextBX] == 'O') {
						o = true;
						break;
					}
					nextBX += dx[i];
					nextBY += dy[i];
				}
				
				if(o) {
					continue;
				}
									
				while(nextRX >= 1 && nextRX < safeLineX && nextRY >= 1 && nextRY < safeLineY
						 && bord[nextRY][nextRX] != '#') {
					if(bord[nextRY][nextRX] == 'O') {
						System.out.println(cnt + 1);					
						return;
					}
					nextRX += dx[i];
					nextRY += dy[i];
				}
				
				nextBX -= dx[i];
				nextBY -= dy[i];
				blueBalls.add(new BlueBall(nextBX, nextBY));
				
				nextRX -= dx[i];
				nextRY -= dy[i];
				redBalls.add(new RedBall(nextRX, nextRY, cnt + 1));	

			}
			if(cnt == 10) {
				System.out.println("-1");
				return;
			}
		}
		System.out.println(-1);
	}
}

class RedBall {
	int x;
	int y;
	int cnt;

	public RedBall(int x, int y, int cnt) {
		super();
		this.x = x;
		this.y = y;
		this.cnt = cnt;
	}

	public int getX() {
		return x;
	}
	public void setX(int x) {
		this.x = x;
	}
	public int getY() {
		return y;
	}
	public void setY(int y) {
		this.y = y;
	}
	public int getCnt() {
		return cnt;
	}
	public void setCnt(int cnt) {
		this.cnt = cnt;
	}
}

class BlueBall {
	int x;
	int y;
	
	public BlueBall(int x, int y) {
		super();
		this.x = x;
		this.y = y;
	}
	
	public int getX() {
		return x;
	}
	public void setX(int x) {
		this.x = x;
	}
	public int getY() {
		return y;
	}
	public void setY(int y) {
		this.y = y;
	}
}

