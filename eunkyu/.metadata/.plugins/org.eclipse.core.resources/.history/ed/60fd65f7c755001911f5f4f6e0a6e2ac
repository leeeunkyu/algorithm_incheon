package algorithm;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.Deque;
import java.util.LinkedList;
import java.util.Stack;

public class Solution_5 {
	static int k;
	static Deque[] dqs;
	//12:50
	public static void main(String[] args) throws NumberFormatException, IOException {
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		int testCase = Integer.parseInt(br.readLine());
		
		for (int tc = 1; tc <= testCase; tc++) {
			k = Integer.parseInt(br.readLine());
			dqs = new Deque[4];
			String[] str;
			Deque<Integer> dq;
			for (int i = 0; i < 4; i++) {
				dq = new LinkedList<Integer>();
				str = br.readLine().split(" ");
				for (int j = 0; j < 8; j++) {
					dq.addLast(Integer.parseInt(str[j]));
				}	
				dqs[i] = dq;
			}	
		}
		int[][] order = new int[2][k];
		for (int i = 0; i < k; i++) {
			String[] info = br.readLine().split(" ");
			order[0][i] = Integer.parseInt(info[0]) - 1;
			order[1][i] = Integer.parseInt(info[1]);
		}
		
		goGame(order);
	}
	private static void goGame(int[][] order) {
		for (int i = 0; i < k; i++) {
			int num = order[0][i];
			int dir = order[1][i];
			
			Deque<Integer> dq = dqs[num];
			if(dir == 1) {
				Val val = getVal(dq);
				if(num != 0 && num != 3) {
					Val rNumVal = getVal(dqs[num + 1]);
					if(rNumVal.getlVal() != val.getrVal()) {
						dqs[num + 1].addLast(dq.pollFirst());
						if(true) {
							//또 회전 검사..
						}
					}
					Val lNumVal = getVal(dqs[num - 1]);
					if(lNumVal.getrVal() != val.getlVal()) {
						dqs[num - 1].addLast(dq.pollFirst());
						if(true) {
							//또 회전 검사..
						}
					}
				}
				dq.addFirst(dq.pollLast());
			} else{
				dq.addLast(dq.pollFirst());
			}
			
		}
	}
	private static Val getVal(Deque<Integer> dq) {
		int rVal = 0;
		int lVal = 0;
		Stack<Integer> stack = new Stack<>();
		for (int j = 0; j < 3; j++) {
			rVal = dq.pollFirst();
			stack.add(rVal);
		}
		while(!stack.isEmpty()) {
			dq.addFirst(stack.pop());
		}
		for (int j = 0; j < 2; j++) {
			lVal = dq.pollLast();
			stack.add(lVal);
		}
		while(!stack.isEmpty()) {
			dq.addLast(stack.pop());
		}
		return new Val(rVal, lVal);
	}

}

class Val {
	int rVal;
	int lVal;
	
	public Val(int rVal, int lVal) {
		super();
		this.rVal = rVal;
		this.lVal = lVal;
	}
	
	public int getrVal() {
		return rVal;
	}
	public void setrVal(int rVal) {
		this.rVal = rVal;
	}
	public int getlVal() {
		return lVal;
	}
	public void setlVal(int lVal) {
		this.lVal = lVal;
	}
}
