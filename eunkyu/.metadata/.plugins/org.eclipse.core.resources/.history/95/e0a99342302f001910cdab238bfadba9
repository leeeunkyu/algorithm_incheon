	      int map[] = {3,4,3,0,2,2,3,0,0};
	      
	      Arrays.sort(map);
	      
	      int ans = 0;
	      int temp = map[0];
	      int count = 1;
	      
	      for (int i = 1 ; i < map.length; i++) {
	         
	         if (temp == map[i]) {
	            count++;
	         } else if (temp+1 == map[i]) {
	            ans += count;
	            temp = map[i];
	            count = 1;
	         } else if (temp+1 < map[i]) {
	            temp = map[i];
	            count = 1;
	         }
	      }
	      
	      System.out.println(Arrays.toString(map));
	      System.out.println(ans);
		return ans;
    }
	
	
}
